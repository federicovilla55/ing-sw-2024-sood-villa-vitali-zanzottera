<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="360.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.gc19.View.GUI.SceneController.OldConfigurationController">
    <padding>
        <Insets top="10.0" right="40.0" bottom="10.0" left="40.0"/>
    </padding>
    <children>
        <VBox fx:id="contentVBox" alignment="CENTER" prefHeight="360.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <ImageView fx:id="logoImageView" fitHeight="80.0" preserveRatio="true" />

            <Label fx:id="titleLabel" alignment="CENTER" prefWidth="600.0" text="Configuration Found" />

            <TableView fx:id="confTable" prefHeight="200.0" maxWidth="1000">
                <columns>
                    <TableColumn fx:id="nicknameCol" text="Nickname" />
                    <TableColumn fx:id="timeCol" text="Time Stamp" />
                    <TableColumn fx:id="conTypeCol" text="Type" />
                </columns>
            </TableView>

            <HBox fx:id="buttonsHBox" alignment="CENTER" spacing="20.0">
                <children>
                    <Button fx:id="ReconnectButton" mnemonicParsing="false" onAction="#onReconnectPress" text="Reconnect" />
                    <Button fx:id="NewConfButton" mnemonicParsing="false" onAction="#onNewConfigurationPressed" text="New Conf" />
                </children>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
